@using PetShop.Model.Entities
@model Category
@{
    ViewData["Title"] = "Add Category";
}

<div >
    <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-primary mr-2">Return to Admin Page</a>
    <form class="text-center" method="post" enctype="multipart/form-data">
       <h3>Add Category</h3>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name">Category Name: </label>
            <div>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

         <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Description">Description: </label>
            <div>
                <textarea class="form-control" rows="8" asp-for="Description"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <button class="btn btn-outline-primary" type="submit">Save</button>
    </form>
</div>